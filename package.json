{
  "name": "invest-in-a-fair-future-api",
  "version": "1.0.0",
  "description": "Backend application for investinafairfuture.org",
  "main": "server.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text gulp test --exit && nyc report --reporter=lcov",
    "lint": "eslint .",
    "start": "npm run build & nodemon ./dst/index.js",
    "build": "rimraf dist/ && babel src --out-dir dist/ --copy-files --ignore \"src/**/*.spec.js\" --source-maps && cp package.json ./dist && find dist/ -name '*.spec.js' -delete && rm -r dist/spec",
    "serve": "node index.js",
    "serve-dev": "node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/invest-in-a-fair-future/backend.git"
  },
  "author": "Superficial Intelligence",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/invest-in-a-fair-future/backend/issues"
  },
  "homepage": "https://github.com/invest-in-a-fair-future/backend#readme",
  "dependencies": {
    "@log4js-node/logstash-http": "^1.0.0",
    "@log4js-node/logstashudp": "^1.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "log4js": "^4.0.2",
    "mongodb": "^3.2.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-netflix": "^2.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-sonarjs": "^0.3.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-eslint": "^5.0.0",
    "gulp-istanbul": "^1.1.1",
    "gulp-jshint": "^2.0.4",
    "gulp-mocha": "^6.0.0",
    "jshint": "^2.9.6",
    "jshint-stylish": "^2.2.1",
    "minimatch": "^3.0.4",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.0",
    "sinon-chai": "^3.3.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "statements": 80,
    "branches": 75,
    "lines": 80,
    "functions": 80,
    "reporters": [
      "lcov",
      "html",
      "json"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "./src/config/**/*",
      "**/*.spec.js",
      "**/spec/*"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
